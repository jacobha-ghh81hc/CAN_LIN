typedef struct
{
	uint8_t msgID;
	uint8_t data[8];
	uint8_t checkSum;
} linFrameStruct;

typedef struct
{
	uint8_t linPid;
	uint8_t linDirection;
	uint8_t dataLength;
} linTaskStruct;



