typedef enum
{
	busStateIdle = 0,
	busStateBreak,
	busStateSync,
	busStatePid,
	busStateRx,
	busStateTx,
} linBusStateEnum;

typedef enum
{
	usartBreakDetected = 0,
	usartTxCompleted,
	usartRxDataReceived,
	usartTxEmpty,
	usartParityError,
} usartStateEnum;



